`.trim();

        const DEFAULT_THUMBNAIL_PATH = '/storage/emulated/0/Download/Telegram/WCA_Logo.png';

        function getVideoIdentifier(url) {
            const youtubeRegExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
            const match = url.match(youtubeRegExp);
            if (match && match[2].length === 11) {
                return {
                    type: 'youtube',
                    id: match[2]
                };
            }
            return {
                type: 'direct',
                url: url
            };
        }

        // FUNÇÃO AJUSTADA PARA GERAR MINIATURAS PEQUENAS NO MODAL
        function openVideoModal() {
            const videoListModal = document.getElementById('videoModal');
            const thumbnailsContainer = document.getElementById('videoThumbnails');

            thumbnailsContainer.innerHTML = '';

            if (!videoConfig || videoConfig.trim() === '') {
                thumbnailsContainer.innerHTML = '<p style="color: var(--text-dim); font-style: italic; text-align: center; padding: 2rem;">Nenhum vídeo disponível no momento.</p>';
                videoListModal.classList.add('show');
                return;
            }

            const videoEntries = videoConfig.split(',').map(v => v.trim()).filter(v => v);

            videoEntries.forEach(videoEntry => {
                const videoParts = videoEntry.split('|');
                if (videoParts.length < 2) return;

                const title = videoParts[0].trim();
                const url = videoParts[1].trim();
                const videoIdentifier = getVideoIdentifier(url);

                if (videoIdentifier.type === 'youtube' && videoIdentifier.id) {
                    const thumbnailElement = document.createElement('div');
                    thumbnailElement.className = 'video-thumb';
                    thumbnailElement.onclick = () => openVideoPlayer(title, videoIdentifier.id, 'youtube');

                    thumbnailElement.innerHTML = `
                        <div class="video-thumb-image">
                            <img src="https://img.youtube.com/vi/${videoIdentifier.id}/hqdefault.jpg" alt="${title}">
                            <div class="video-thumb-play">
                                <i class="fas fa-play"></i>
                            </div>
                        </div>
                        <div class="video-thumb-title">${title}</div>
                    `;
                    thumbnailsContainer.appendChild(thumbnailElement);
                } else if (videoIdentifier.type === 'direct' && videoIdentifier.url) {
                    const thumbnailElement = document.createElement('div');
                    thumbnailElement.className = 'video-thumb';
                    thumbnailElement.onclick = () => openVideoPlayer(title, videoIdentifier.url, 'direct');

                    const thumbnailUrl = videoParts.length > 2 ? videoParts[2].trim() : '';
                    let thumbnailImageHTML = '';

                    if (thumbnailUrl) {
                        thumbnailImageHTML = `
                            <img src="${thumbnailUrl}" alt="${title}" style="width: 100%; height: 100%; object-fit: cover;">
                            <div class="video-thumb-play">
                                <i class="fas fa-play"></i>
                            </div>
                        `;
                    } else {
                        thumbnailImageHTML = `
                            <img src="${DEFAULT_THUMBNAIL_PATH}" alt="${title}" style="width: 100%; height: 100%; object-fit: cover;">
                            <div class="video-thumb-play">
                                <i class="fas fa-play"></i>
                            </div>
                        `;
                    }

                    thumbnailElement.innerHTML = `
                        <div class="video-thumb-image">
                            ${thumbnailImageHTML}
                        </div>
                        <div class="video-thumb-title">${title}</div>
                    `;
                    thumbnailsContainer.appendChild(thumbnailElement);
                }
            });

            videoListModal.classList.add('show');
        }

        function closeVideoModal() {
            document.getElementById('videoModal').classList.remove('show');
        }

        function openVideoPlayer(title, identifier, type) {
            const playerModal = document.getElementById('videoPlayerModal');
            const titleElement = document.getElementById('videoPlayerTitle');
            const playerContainer = document.getElementById('videoPlayerContainer');

            titleElement.innerHTML = `<i class="fas fa-play-circle"></i> ${title}`;

            playerContainer.innerHTML = ''; // Clear previous content

            if (type === 'youtube') {
                const iframeElement = document.createElement('iframe');
                iframeElement.style.cssText = "position: absolute; top: 0; left: 0; width: 100%; height: 100%;";
                iframeElement.src = `https://www.youtube.com/embed/${identifier}?autoplay=1`;
                iframeElement.frameBorder = "0"; // Correct DOM property for frameborder
                iframeElement.allow = "accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture";
                iframeElement.allowFullscreen = true; // Correct DOM property for allowfullscreen
                playerContainer.appendChild(iframeElement);
            } else if (type === 'direct') {
                const videoElement = document.createElement('video');
                videoElement.style.cssText = "position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: black;";
                videoElement.src = identifier;
                videoElement.controls = true;
                videoElement.controlsList = "nodownload";
                videoElement.autoplay = true;
                videoElement.muted = true; // Start muted
                videoElement.playsinline = true;
                videoElement.setAttribute('allowfullscreen', 'true'); // Add for WebView compatibility attempt
                videoElement.innerHTML = "Seu navegador não suporta a tag de vídeo.";
                playerContainer.appendChild(videoElement);

                // Create and add the button
                const watchOutsideButton = document.createElement('button');
                watchOutsideButton.innerText = 'Assistir fora do Tasker';
                watchOutsideButton.className = 'btn-open-videos btn-external-video'; // Unique class for removal
                watchOutsideButton.style.cssText = "margin-top: 1rem; display: block; margin-left: auto; margin-right: auto;";
                watchOutsideButton.onclick = function() {
                    ///alert(identifier)
                    
                    setLocal("video_link",identifier);
                    destroyScene('Wca Teste');
                };
                // Append button to the modal content, after the video container
                playerContainer.parentNode.appendChild(watchOutsideButton);

                // Attempt to unmute after a short delay (e.g., 2 seconds)
                setTimeout(() => {
                    if (videoElement && videoElement.muted) {
                        videoElement.muted = false;
                        // Play if it was paused due to unmuting policy
                        if (videoElement.paused) {
                            videoElement.play().catch(error => {
                                console.error("Error attempting to autoplay after unmute:", error);
                            });
                        }
                    }
                }, 200);
            }

            closeVideoModal();
            playerModal.classList.add('show');
        }

        function closeVideoPlayer() {
            const playerModal = document.getElementById('videoPlayerModal');
            const playerContainer = document.getElementById('videoPlayerContainer');
            playerContainer.innerHTML = ''; // Stop video playback

            // Find and remove the dynamically added button
            const externalButton = playerModal.querySelector('.btn-external-video');
            if (externalButton) {
                externalButton.remove();
            }

            playerModal.classList.remove('show'); // Hide player modal

            // Show the video thumbnails modal
            const videoListModal = document.getElementById('videoModal');
            videoListModal.classList.add('show');
        }

        window.onclick = function(event) {
            if (event.target === document.getElementById('videoModal')) closeVideoModal();
            if (event.target === document.getElementById('videoPlayerModal')) closeVideoPlayer();
        }

        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeVideoModal();
                closeVideoPlayer();
            }
        });

        // Smooth scrolling
        document.querySelectorAll('.nav-link').forEach(navLink => {
            navLink.addEventListener('click', function(e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetSection = document.querySelector(targetId);
                targetSection.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
                document.querySelectorAll('.nav-link').forEach(linkToDeactivate => {
                    linkToDeactivate.classList.remove('active');
                });
                this.classList.add('active');
            });
        });

        const scrollTopButton = document.getElementById('scrollTop');
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                scrollTopButton.classList.add('show');
            } else {
                scrollTopButton.classList.remove('show');
            }
        });
        scrollTopButton.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        window.addEventListener('scroll', () => {
            let currentSectionId = '';
            const sections = document.querySelectorAll('.section');
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                if (pageYOffset >= (sectionTop - 150)) {
                    currentSectionId = section.getAttribute('id');
                }
            });
            document.querySelectorAll('.nav-link').forEach(navLink => {
                navLink.classList.remove('active');
                if (navLink.getAttribute('href') === `#${currentSectionId}`) {
                    navLink.classList.add('active');
                }
            });
        });

        const intersectionObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        });

        document.querySelectorAll('.section').forEach(section => {
            section.style.opacity = '0';
            section.style.transform = 'translateY(30px)';
            section.style.transition = 'all 0.6s ease';
            intersectionObserver.observe(section);
        });
    </script>
</body>
</html>
